<h1>ログイン</h1>

<div>
  <ul>
    <% @user.errors.full_messages.uniq.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>

<div>
  <%= form_with model: @user, url: sessions_create_path, method: :post, local: true do |f| %>
    <div>
      <%= f.label :login_id %>
      <%= f.text_field :login_id %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <p><%= f.submit 'ログインする' %></p>
  <% end %>
</div>