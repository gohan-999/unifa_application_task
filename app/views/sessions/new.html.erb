<h1>ログイン</h1>

<div>
  <ul>
    <% flash&.alert&.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>

<div>
  <%= form_with model: @user, url: sessions_create_path, local: true do |f| %>
    <div>
      <%= f.label 'ユーザーID' %>
      <%= f.text_field :login_id %>
    </div>
    <div>
      <%= f.label 'パスワード' %>
      <%= f.password_field :password %>
    </div>

    <p><%= f.submit 'ログインする' %></p>
  <% end %>
</div>